---
services:
  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr
    environment:
      - PUID=$(MY_PUID)
      - PGID=$(My_PGID)
      - TZ=$(MY_TZ)
    volumes:
      - /appdata/config/sonarr:/config
      - /data/series:/tv #optional
      - /data/download:/downloads #optional
    ports:
      - 8989:8989
    restart: unless-stopped
